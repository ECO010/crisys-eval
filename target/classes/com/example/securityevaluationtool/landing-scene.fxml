<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.securityevaluationtool.LandingSceneController">

    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="4.0" prefHeight="63.0" prefWidth="300.0" text="CriSysEval">
        <font>
            <Font name="Arial Bold" size="20.0" />
        </font>
    </Label>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="157.0" layoutY="64.0" prefHeight="33.0" prefWidth="287.0" text="A Security Evaluation Tool For Critical Systems">
        <font>
            <Font name="Arial" size="13.0" />
        </font>
    </Label>
    <ImageView fx:id="myImage" fitHeight="270.0" fitWidth="300.0" layoutX="157.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true">
        <!-- No need to specify the image source here -->
    </ImageView>

    <HBox alignment="CENTER_RIGHT" layoutX="208.0" layoutY="336.0" prefHeight="70.0" prefWidth="370.0" spacing="10.0">
        <children>
            <Button mnemonicParsing="false" onAction="#onBeginEvaluationClick" prefWidth="129.0" text="Begin Evaluation" />
            <Button mnemonicParsing="false" onAction="#onCheckIcsAssetClick" text="Check ICS Asset Vulnerabilities" />
        </children>
        <padding>
            <Insets top="20.0" />
        </padding>
    </HBox>

</AnchorPane>
