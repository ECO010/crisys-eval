<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.securityevaluationtool.TreePromptSceneController">
   <children>
      <Label layoutX="134.0" layoutY="54.0" text="Your selection will be used to generate the attack tree">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
         <tooltip>
            <Tooltip text="An attack tree shows you a hierarchial view of patterns that threat actors use to achieve their goals. This evaluation tool generates attack trees tailored to ICS environments. ">
               <font>
                  <Font name="Arial" size="10.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Label>
      <Label layoutX="165.0" layoutY="32.0" prefHeight="22.0" prefWidth="270.0" text="Filter attack patterns by Impacts or Scopes.">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
      </Label>
      <Button id="attackScopesBtn" layoutX="305.0" layoutY="92.0" mnemonicParsing="false" onAction="#onAttackScopeClick" prefHeight="30.0" prefWidth="204.0" text="Attack Scopes" />
      <VBox id="attackScopeBox" fx:id="attackScopeBox" layoutX="305.0" layoutY="121.0" prefHeight="222.0" prefWidth="204.0" visible="false" />
      <Button id="attackImpactsBtn" layoutX="74.0" layoutY="92.0" mnemonicParsing="false" onAction="#onAttackImpactClick" prefHeight="30.0" prefWidth="204.0" text="Attack Impacts" />
      <VBox id="attackImpactBox" fx:id="attackImpactBox" layoutX="76.0" layoutY="121.0" prefHeight="222.0" prefWidth="204.0" visible="false" />

       <Button layoutX="481.0" layoutY="371.0" mnemonicParsing="false" onAction="#onNextClick" prefHeight="30.0" prefWidth="99.0" text="Next" />
      <Button layoutX="14.0" layoutY="371.0" mnemonicParsing="false" onAction="#onBackClick" prefHeight="30.0" prefWidth="99.0" text="Back" />
   </children>
</AnchorPane>
